/dts-v1/;
/plugin/;

/ {
   compatible = "brcm,bcm2835", "brcm,bcm2836", "brcm,bcm2708", "brcm,bcm2709";

   fragment@0 {
      target = <&spi0>;
      frag0: __overlay__ {
         #address-cells = <1>;
         #size-cells = <0>;
         pinctrl-0 = <&spi0_pins &spi0_cs_pins>;
         status = "okay";
         cs-gpios = <0>, <0>, <&gpio 4 1>, <&gpio 5 1>, <&gpio 6 1>, <&gpio 13 1>, <&gpio 26 1>;

         spidev@2{
            compatible = "spidev";
            reg = <2>;   /* CE2 */
            #address-cells = <1>;
            #size-cells = <0>;
            spi-max-frequency = <0x0007a120>;
         };

         spidev@3{
            compatible = "spidev";
            reg = <3>;   /* CE3 */
            #address-cells = <1>;
            #size-cells = <0>;
            spi-max-frequency = <0x0007a120>;
         };
		 
	     spidev@4{
            compatible = "spidev";
            reg = <4>;   /* CE4 */
            #address-cells = <1>;
            #size-cells = <0>;
            spi-max-frequency = <0x0007a120>;
         };

         spidev@5{
            compatible = "spidev";
            reg = <5>;   /* CE5 */
            #address-cells = <1>;
            #size-cells = <0>;
            spi-max-frequency = <0x0007a120>;
         };
		 
		 spidev@6{
            compatible = "spidev";
            reg = <6>;   /* CE6 */
            #address-cells = <1>;
            #size-cells = <0>;
            spi-max-frequency = <0x0007a120>;
         };
      };
   };

   fragment@1 {
      target = <&gpio>;
      __overlay__ {
         spi0_cs_pins: spi0_cs_pins {
            brcm,pins = <4 5 6 13 26>; 
            brcm,function = <1 1 1 1 1>; /* out */
		    brcm,pull = <0 0 0 0 0>;     /* 2:up 1:down 0:none */
		    brcm,state = <1 1 1 1 1>;    /* set output to high */
         };
      };
   };
};
